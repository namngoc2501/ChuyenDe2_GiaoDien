<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChuCuaHang.ChuCuaHang_ManHinhThongKeDoanhThu"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/backThongKeDoanhThu"
            style="@style/buttonBack"
            android:text="Back"
            />
        <TextView
            style="@style/titleActivity"
            android:text="Thống Kê Doanh Thu"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/TKDTthongkedonhang"
            style="@style/buttonStyle"
            android:text="Thống Kê Đơn Hàng" />

        <Button
            android:id="@+id/TKDTthongkedonhangbihuy"
            style="@style/buttonStyle"
            android:text="Thống Kê Đơn Hàng Bị Hủy" />

        <Button
            android:id="@+id/TKDTsotientrachovanchuyen"
            style="@style/buttonStyle"
            android:text="Số Tiền Phải Trả Cho Đơn Vị Vận Chuyển" />

        <Button
            android:id="@+id/TKDTdoanhthu"
            style="@style/buttonStyle"
            android:text="Doanh Thu" />
    </LinearLayout>
</LinearLayout>